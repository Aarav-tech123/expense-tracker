<div class="container">
    <header>
        <h2>FinTrack Pro</h2>
        <button class="theme-btn" onclick="toggleTheme()">üåì Theme</button>
    </header>

    <div class="card">
        <div style="text-align:center">
            <small>Net Balance</small>
            <h1 id="total-balance">‚Çπ 0</h1>
            <select id="currency" onchange="updateUI()" style="width: auto; padding: 2px;">
                <option value="‚Çπ">Rupees (INR)</option>
                <option value="$">Dollar (USD)</option>
                <option value="‚Ç¨">Euro (EUR)</option>
            </select>
        </div>
        <div class="stats-grid" style="margin-top: 20px;">
            <div class="stat-box profit">
                <small>Income</small>
                <div id="inc-val">0</div>
            </div>
            <div class="stat-box loss">
                <small>Expense</small>
                <div id="exp-val">0</div>
            </div>
        </div>
        <div id="indicator" style="text-align: center; margin-top: 10px; font-weight: bold;"></div>
    </div>

    <div class="card">
        <canvas id="myChart"></canvas>
    </div>

    <div class="card">
        <h3>Add Transaction</h3>
        <input type="text" id="desc" placeholder="Description (e.g. Salary, Food)">
        <input type="number" id="amount" placeholder="Amount">
        <select id="type">
            <option value="income">Income (+)</option>
            <option value="expense">Expense (-)</option>
        </select>
        <button class="main-btn" onclick="addTransaction()">Add To Ledger</button>
    </div>

    <div class="card">
        <h3>Recent History</h3>
        <div class="transaction-list" id="history"></div>
        <button onclick="clearAll()" style="color: red; border:none; background:none; font-size: 12px;">Clear All Data</button>
    </div>
</div>



<script>
    let transactions = JSON.parse(localStorage.getItem('fintrack_data')) || [];
    let myChart = null;

    function toggleTheme() {
        const doc = document.documentElement;
        doc.getAttribute('data-theme') === 'dark' ? 
            doc.setAttribute('data-theme', 'light') : doc.setAttribute('data-theme', 'dark');
    }

    function addTransaction() {
        const desc = document.getElementById('desc').value;
        const amount = parseFloat(document.getElementById('amount').value);
        const type = document.getElementById('type').value;

        if(!desc || isNaN(amount)) return alert("Sahi data bhariye!");

        transactions.push({ id: Date.now(), desc, amount, type });
        localStorage.setItem('fintrack_data', JSON.stringify(transactions));
        
        document.getElementById('desc').value = '';
        document.getElementById('amount').value = '';
        updateUI();
    }

    function updateUI() {
        const curr = document.getElementById('currency').value;
        const history = document.getElementById('history');
        const balanceEl = document.getElementById('total-balance');
        const incEl = document.getElementById('inc-val');
        const expEl = document.getElementById('exp-val');
        const indicator = document.getElementById('indicator');

        let income = 0, expense = 0;
        history.innerHTML = '';

        transactions.forEach(t => {
            if(t.type === 'income') income += t.amount;
            else expense += t.amount;

            history.innerHTML += `
                <div class="item">
                    <span>${t.desc}</span>
                    <span style="color: ${t.type === 'income' ? '#00b894' : '#d63031'}">
                        ${t.type === 'income' ? '+' : '-'}${curr}${t.amount}
                    </span>
                </div>
            `;
        });

        const total = income - expense;
        balanceEl.innerText = `${curr} ${total.toLocaleString()}`;
        incEl.innerText = `${curr} ${income}`;
        expEl.innerText = `${curr} ${expense}`;

        // Profit/Loss Indicator
        if(total > 0) {
            indicator.innerText = "‚≠ê You are in Profit";
            indicator.style.color = "#00b894";
        } else if (total < 0) {
            indicator.innerText = "‚ö†Ô∏è You are in Loss";
            indicator.style.color = "#d63031";
        } else {
            indicator.innerText = "";
        }

        updateChart(income, expense);
    }

    function updateChart(inc, exp) {
        const ctx = document.getElementById('myChart').getContext('2d');
        if(myChart) myChart.destroy();

        myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Income', 'Expense'],
                datasets: [{
                    data: [inc, exp],
                    backgroundColor: ['#00b894', '#d63031'],
                    borderWidth: 0
                }]
            },
            options: { cutout: '70%' }
        });
    }

    function clearAll() {
        if(confirm("Saara data delete kar dein?")) {
            transactions = [];
            localStorage.clear();
            updateUI();
        }
    }

    // Initialize
    updateUI();
</script>
</body>
</html>
